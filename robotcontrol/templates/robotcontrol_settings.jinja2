<h4>Robot Control Settings</h4>
<form class="form-horizontal">

    <div class="control-group">
        <label class="control-label">Servo  min</label>
        <div class="controls">
            <textarea rows="1" class="input-block-level" data-bind="value: settings.plugins.robotcontrol.servoMin"></textarea>
        </div>
    </div>
    
    
    
     <div class="control-group">
        <label class="control-label">Servo  max</label>
        <div class="controls">
            <textarea rows="1" class="input-block-level" data-bind="value: settings.plugins.robotcontrol.servoMax"></textarea>
        </div>
    </div>
    
    
   
    <div class="control-group">
        <label class="control-label">address</label>
        <div class="controls">
            <textarea rows="1" class="input-block-level" data-bind="value: settings.plugins.robotcontrol.addr"></textarea>
        </div>
    </div>
    
    
</form>
